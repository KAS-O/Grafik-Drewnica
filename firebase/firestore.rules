rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function userRecord() {
      return isSignedIn()
        ? get(/databases/$(database)/documents/users/$(request.auth.uid))
        : null;
    }

    function isAdminRole(roleValue) {
      return lower(roleValue).matches('^\\s*(administrator|admin)\\s*$');
    }

    function isAdmin() {
      // Admin jeśli w dokumencie users/{uid} ma rolę (pisownia i białe znaki nie mają znaczenia)
      // lub gdy ma ustawiony custom claim `admin: true`.
      let record = userRecord();
      let roleValue = record != null && record.exists() && record.data.role is string
        ? record.data.role
        : "";

      return isAdminRole(roleValue) || (isSignedIn() && request.auth.token.admin == true);
    }

    function isSelf(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read: if isAdmin() || isSelf(userId);
      allow create: if isSelf(userId);
      allow update: if isAdmin() || (isSelf(userId) &&
        request.resource.data.keys().hasOnly(["firstName", "lastName", "employeeId", "role", "email", "createdAt"]) &&
        request.resource.data.role == resource.data.role);
    }

    match /employees/{employeeId} {
      allow read: if isAdmin() || (isSignedIn() && resource != null && resource.data.assignedUserId == request.auth.uid);
      allow create, update, delete: if isAdmin();
    }

    match /schedules/{monthId} {
      allow read: if isAdmin() || (isSignedIn() && (
        (resource != null && resource.data.viewerIds != null && request.auth.uid in resource.data.viewerIds) ||
        (request.resource != null && request.resource.data.viewerIds != null && request.auth.uid in request.resource.data.viewerIds)
      ));
      allow create, update, delete: if isAdmin();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
