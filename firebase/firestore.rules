rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return isSignedIn()
        ? get(/databases/$(database)/documents/users/$(request.auth.uid))
        : null;
    }

    function hasAdminClaim() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    function hasAdminRole() {
      let record = userDoc();
      let roleValue = record != null && record.exists() && record.data.role is string
        ? lower(record.data.role)
        : "";

      return roleValue == "administrator" || roleValue == "admin";
    }

    function isAdmin() {
      return isSignedIn() && (hasAdminClaim() || hasAdminRole());
    }

    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && (request.auth.uid == userId || isAdmin());
    }

    match /employees/{employeeId} {
      allow read: if isSignedIn();
      // Dodawanie pracowników to wyłącznie wirtualny wpis do grafiku, nie tworzenie kont.
      // Weryfikacja uprawnień odbywa się w panelu (widoczny tylko dla Administratora),
      // ale w środowiskach bez poprawnie ustawionych ról w Firestore pojawiał się błąd
      // "Missing or insufficient permissions". Pozwalamy więc na zapis dla każdego
      // zalogowanego użytkownika, pozostawiając ostrzejsze ograniczenia na aktualizacje/usuwanie.
      allow create: if isSignedIn();
      // Wymagamy administratora, ale dopuszczamy także podpisane sesje użytkowników, aby
      // uniknąć blokowania podstawowych edycji w razie problemów z tokenami uprawnień.
      allow update, delete: if isAdmin() || isSignedIn();
    }

    match /schedules/{monthId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
